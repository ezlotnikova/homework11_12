<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="4.0"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
   http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
  <display-name>Archetype Created Web Application</display-name>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <listener>
    <listener-class>com.gmail.zlotnikova.controller.listener.InitListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.gmail.zlotnikova.controller.listener.ShutdownListener</listener-class>
  </listener>

  <filter>
    <filter-name>LandingFilter</filter-name>
    <filter-class>com.gmail.zlotnikova.controller.filter.LandingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LandingFilter</filter-name>
    <url-pattern>/</url-pattern>>
  </filter-mapping>

  <filter>
    <filter-name>AccessFilter</filter-name>
    <filter-class>com.gmail.zlotnikova.controller.filter.AccessFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AccessFilter</filter-name>
    <url-pattern>/users</url-pattern>>
    <url-pattern>/roles</url-pattern>>
  </filter-mapping>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.gmail.zlotnikova.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>com.gmail.zlotnikova.controller.RegistrationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UsersServlet</servlet-name>
    <servlet-class>com.gmail.zlotnikova.controller.UsersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UsersServlet</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RolesServlet</servlet-name>
    <servlet-class>com.gmail.zlotnikova.controller.RolesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RolesServlet</servlet-name>
    <url-pattern>/roles</url-pattern>
  </servlet-mapping>

</web-app>